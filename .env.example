# ==================================================
# KHAIRAWANG DAIRY - Environment Configuration
# ==================================================
# Copy this file to .env and configure your settings

# Application
APP_NAME="KHAIRAWANG DAIRY"
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost
APP_KEY=your-32-character-secret-key-here

# Database
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=khairawang_dairy
DB_USERNAME=root
DB_PASSWORD=

# Cache
CACHE_DRIVER=file

# Session
SESSION_DRIVER=file
SESSION_SECURE=true

# Mail
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@khairawangdairy.com
MAIL_FROM_NAME="${APP_NAME}"

# eSewa Payment Gateway
ESEWA_MERCHANT_CODE=EPAYTEST
ESEWA_SECRET_KEY=
ESEWA_SUCCESS_URL=/payment/success
ESEWA_FAILURE_URL=/payment/failure
PAYMENT_TEST_MODE=true

# Khalti Payment Gateway (optional)
KHALTI_PUBLIC_KEY=
KHALTI_SECRET_KEY=
KHALTI_RETURN_URL=/payment/khalti/callback

# SMS Configuration (Nepal Gateways)
SMS_DRIVER=sparrow
SMS_ENABLED=true
SMS_FROM=KhairawangDairy

# Sparrow SMS (https://sparrowsms.com)
SPARROW_SMS_TOKEN=
SPARROW_SMS_FROM=KhairawangDairy

# Aakash SMS (https://aakashsms.com) - Alternative
AAKASH_SMS_TOKEN=
AAKASH_SMS_FROM=

# Redis (optional)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_CACHE_DB=1

# Security
CSP_ENABLED=false

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback
